<%- include ('_header') %>

	<div class = "table-main">
		<h1 class="table-heading">Current Personal Student</h1>
		<% if(!data) { %>
				<h1> You don't have any personally Tutored Student </h1>
			<% } else{ %>
		<form method="post" action="/teacher/personalStudent/terminate">
			<div>
				Name:<%= data.user.name %>
				uID: <%= data.user.uID %>
			</div>
				<button type="submit" class="ann-remove">Terminate Tutoring</button>
		</form>
		<% } %>
		<h1 class="table-heading">Requests for Tutoring</h1>
		<% if(requests.length == 0) { %>
				<h1>You dont have any request for personal Tutoring</h1>
			<% } else{ %>
		
	<% for(let i in requests){ %>
 		
			<h4>
				Name:<%= requests[i].student.name %>
			</h4>
			<form method="post" action="/teacher/personalStudent/deleteRequest/<%= requests[i]._id %>">
			<button type="submit" class="ann-remove">Delete Request</button></form>
			<form method="post" action="/teacher/personalStudent/acceptRequest/<%= requests[i]._id %>">
			<button type="submit" class="ann-remove">Accept Request</button>
		</form>
	<% }} %>
</div>

<% include('include/_footer') %>